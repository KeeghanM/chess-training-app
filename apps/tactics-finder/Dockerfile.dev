FROM python:3.10-slim

WORKDIR /app

# Install runtime dependencies and developer tools
RUN apt-get update && apt-get install -y \
    stockfish \
    pgn-extract \
    curl \
 && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install optional dev-only packages (auto reload)
RUN pip install --no-cache-dir watchdog

# Mount code at runtime, so only copy what's needed
CMD ["watchmedo", "auto-restart", "--directory=.", "--pattern=*.py", "--", "python", "worker.py"]
