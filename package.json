{
  "name": "chess-training-monorepo",
  "version": "3.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml restart && docker compose -f docker-compose.dev.yml up",
    "dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "dev:down": "docker compose -f docker-compose.dev.yml down",
    "qa": "npm run qa:format && npm run qa:check-types && npm run qa:lint && npm run qa:test",
    "qa:format": "npx prettier . --write --cache --log-level warn",
    "qa:check-types": "npm run qa:check-types --workspaces --if-present",
    "qa:lint": "npx eslint .",
    "qa:lint:fix": "npx eslint . --fix",
    "qa:test": "npm run qa:test --workspaces --if-present",
    "prepare": "husky",
    "git-diff": "git log origin/main..HEAD --pretty=format:'%ad:: %s' > git-diff.txt && echo '\n----------\n' >> git-diff.txt && git diff origin/main...HEAD --color ':!*.lock' >> git-diff.txt"
  },
  "lint-staged": {
    "**/*": [
      "yarn qa:format"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
